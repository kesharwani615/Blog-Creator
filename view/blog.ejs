<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home</title>
</head>
<body>
<%- include('./partials/nav') %>
<div class="container">
<h1><%= viewBlog.title %></h1>
<img src="<%= viewBlog.coverImgURL %>" style="height: 400px;width: 700px;"/>
<pre><%= viewBlog.body %></pre>
</div>

<div class="container">
<img src="<%= viewBlog.createdBy.profileURL %>" style="width: 40px;height: 40px;"/>
<%= viewBlog.createdBy.FullName %>
</div>

<div class="container">
    <h2>Comment</h2>
   <% if (locals.user) { %>
    <form action="/blog/comment/<%= viewBlog._id %>" method="post">
      <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="exampleInputEmail1"
            name="content"  
            aria-describedby="emailHelp"
            placeholder="Enter Your Comment!"
          />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
  </form>
   <% } %>
</div>

<div class="container mt-4">
<% comment.forEach(element => { %>
  <div style="display: flex;">
  <img src="<%= element.createdBy.profileURL %>" style="height: 30px; width: 30px;"/>
  <div style="margin-left: 10px;"><%= element.createdBy.FullName %></div>
</div>
 <pre><%= element.content %></pre>
<% }) %>
</div>

</body>
<%- include('./partials/script') %>
</html>